const express = require('express');
const mysql = require('mysql');
const cors = require('cors');
const jwt = require('jsonwebtoken');

const app = express();
const port = 3000;
const secret = 'mysecrets';

const db = mysql.createConnection({
  host: 'localhost',
  user: 'root',
  password: 'root',
  database: 'delicio'
});

app.use(cors());
app.use(express.json());


//--------------------------------------- Authentication --------------------------------

app.post('/adminlogin', (req, res) => {
  const { username, password } = req.body;

  db.query(
    'SELECT * FROM admin_login WHERE username = ? AND adminpw = ?',
    [username, password],
    (err, result) => {
      if (err) {
        res.send({ err: err, status: 'error' });
      } else if (result.length > 0) {
        const token = jwt.sign({ username }, secret, { expiresIn: '1h' });
        res.send({ token: token, status: 'success' });
      } else {
        res.send({ message: 'Wrong username/password combination!', status: 'error' });
      }
    }
  );
});

app.post('/admin_authen', (req, res) => {
  try {
    const tokenChecking = req.headers.authorization.split(' ')[1];
    jwt.verify(tokenChecking, secret);
    res.json({ status: 'success' });
  } catch (err) {
    res.json({ status: 'error' });
  }
});

app.listen(port, () => {
  console.log(`Server is running on http://localhost:${port}`);
});
